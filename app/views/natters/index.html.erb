<h1>Listing natters</h1>

<table>
  <tr>
    <th>From</th>
    <th>Message</th>
    <th>When</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @natters.each do |natter| %>
  <tr>
    <td><%= natter.schmozzeler.address unless natter.schmozzeler.nil? %></td>
    <td><%= natter.message %></td>
    <td><%= distance_of_time_in_words_to_now natter.created_at %></td>
    <td><%= link_to 'Show', natter %></td>
    <td><%= link_to 'Edit', edit_natter_path(natter) %></td>
    <td><%= link_to 'Destroy', natter, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

