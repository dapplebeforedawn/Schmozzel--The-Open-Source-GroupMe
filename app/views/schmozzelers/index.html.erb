<h1>Listing schmozzelers</h1>

<table>
  <tr>
    <th>Address</th>
    <th>Name</th>
    <th>Joined</th>
    <th>When On Mute</th>
    <th></th>
  </tr>

<% @schmozzelers.each do |schmozzeler| %>
  <tr>
    <td><%= schmozzeler.address %></td>
    <td><%= schmozzeler.name %></td>
    <td><%= distance_of_time_in_words_to_now schmozzeler.created_at %></td>
    <td><%= schmozzeler.muted_at %></td>
    <td><%= link_to 'Show', schmozzeler %></td>
    <td><%= link_to 'Edit', edit_schmozzeler_path(schmozzeler) %></td>
    <td><%= link_to 'Destroy', schmozzeler, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

